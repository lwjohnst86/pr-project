#!/bin/sh
#

usage() {
    echo "
    Arguments (need to include them all): $0
        -i Input folder for the photos
        -o Output folder for the shrunk photos
        -r The resolution to use
        " 1>&2
    exit 1
}

while getopts ":i:o:r:h:" opt; do
  case ${opt} in
    i) input=${OPTARG}
    ;;
    o) output=${OPTARG}
    ;;
    r) resolution=${OPTARG}
    ;;
    h|*) usage
    ;;
  esac
done

if [ -z "$input" -o -z "$output" -o -z "$resolution" ]; then
    usage
fi

mogrify -path $output -resize $resolution $input

